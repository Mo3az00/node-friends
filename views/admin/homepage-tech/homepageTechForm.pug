extends ../layout
block content

  h1= title

  form.favorite-technologies(method='POST' enctype="multipart/form-data")
    .form-group
      label(for='technology-title') Title
      input(type='text' class='form-control' 
            placeholder='technology name' 
            name='title' 
            value=(technology.title || '')
            )

    .form-group
      label(for='technology-use') Description
      textarea( class='form-control' 
                rows='3' 
                placeholder='what you like about this technology / how do you use this technology' 
                name='description')=(technology.description || '')

    .form-group
      label(for='image')
        | Upload an Image:
        if technology.image
          img(src=`/uploads/homepage-technologies/${technology.image}`, alt=technology.title  width=200)
        else
          != helpers.placeholderImage(250, 150, 'image')

        input.form-control(type='file', name='image', id='image', accept="image/gif, image/png, image/jpeg, image/jpg")

    .form-group
      button(type='submit' class='btn btn-primary') Save
