extends ../layout

block content
  .container-fluid.mt-3
    h2.page-title= title
    p
      a.btn.btn-secondary(href='/admin/projects/add')
        i.fa.fa-plus-circle
        |  Add new Project
    table.table.table-striped.table-bordered.table-hover
      thead
        tr
          th(scope='col') #
          th(scope='col') Project Name
          th(scope='col') Link
          th(scope='col') Options
      tbody
        each project, index in projects
          tr
            th(scope='row') #{index +1}
            td= project.title
            td
              a(href=`${project.link}` target="_blank") #{project.link}
            td.actions
              a(href=`/admin/projects/${project._id}/edit`)
                i.fa.fa-edit(title='Edit', data-toggle='tooltip', data-placement='top')
              a(href=`/admin/projects/${project._id}/delete` data-confirm="true")
                i.fa.fa-remove(title='Delete', data-toggle='tooltip', data-placement='top' onclick="return confirm('Are you sure you want to delete this entry?')")