      tr
        th(scope='row') 1
        td Demo1
        td #
        td
          .dropdown
            button#dropdownMenuButton.dropdown-hover.btn.btn-link(type='button', data-hover='dropdown', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              i.fa.fa-pencil-square-o
              .dropdown-menu(aria-labelledby='dropdownMenuButton')
                a.dropdown-item(href='#') Edit
                a.dropdown-item(href='#') Delete
      tr
        th(scope='row') 2
