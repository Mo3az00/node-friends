extends ../layout

block content
  table.table
    thead
      tr
        th(scope='col') #
        th(scope='col') Project Name
        th(scope='col') Link
        th(scope='col') Options
          button.btn.btn-link.btn-add(type='button')
            i.fa.fa-plus
