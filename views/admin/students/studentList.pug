extends ../layout
block content
  .container-fluid
    h2.page-title Students
    table.table.table-bordered.table-striped.table-hover
      thead
        tr
          th(scope='col') #
          th(scope='col') First Name
          th(scope='col') Last Name
          th(scope='col') Email
          th(scope='col') Phone Number
          th(scope='col') Portfolio
      tbody
        each student, index in students
          tr
            th(scope='row') #{index + 1}
              td #{student.first_name}
              td #{student.last_name}
              td
                if !student.email
                  | -
                else if demo === false
                  | #{student.email}
                else
                  | #{student.email.substr(0, 7)}
                  sub.text-muted #{'*'.repeat(student.email.length - 7)}
              td
                if !student.phone
                  | -
                else if demo === false
                  | #{student.phone}
                else
                  | #{student.phone.substr(0, 7)}
                  sub.text-muted #{'*'.repeat(student.phone.length - 7)}
              td: a(href=`${student.website}`) #{student.website}