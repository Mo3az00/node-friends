doctype html
html(lang='en')
  head
    meta(charset="utf-8")

    title= `${title || 'Home'} | Node Friends`

    //- Always force latest IE rendering engine (even in intranet) & Chrome Frame
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    //- Ensure proper rendering and zooming on touch devices
    meta(name="viewport", content="width=device-width, initial-scale=1")

    //- Search Engine Optimization
    meta(name="description", content=`${description  || 'Just a tiny little website of aspiring web developers'}`)
    meta(name="robots", content=`${robots} || index, follow`)

    //- Stylesheets
    link(rel='stylesheet', href='/dist/style.css')

    //- Google fonts
    link(href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet")


  body
    block header
      include frontend-partials/navbar

    block messages
      if locals.flashes
        .container
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`alert alert-${category}`)
                  != message
                  button.close(type='button', data-dismiss='alert', aria-label='Close')
                    span(aria-hidden='true') Ã—

    block content
      include frontend-partials/main
    
    block footer

    block scripts
      script(src="/dist/app.bundle.js")