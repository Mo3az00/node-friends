mixin todoList(todos = {})
    
    .main-todo.col-7.bg-light.p-3.mx-auto
        h5 Tasks

        #todo-list-error.alert.alert-danger.hidden.my-2

        form(action="/admin/todos" method="POST")#todo-form.input-group.my-3
            input#todo-form.form-control(name="name" type='text' placeholder="Please add to-do item...")
            .input-group-append
                button.btn.btn-outline-secondary(type='submit')
                    i.fa.fa-plus(aria-hidden="true")  Add item

        if (todos)
            #todo-list-loading
                i.fa.fa-spin.fa-spinner
                | &nbsp; Loading ...
            #todo-list
