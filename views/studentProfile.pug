doctype html
html(lang='en')
  head
    meta(charset="utf-8")

    title= `${title || 'Student Profile'} | Node Friends`

    //- Always force latest IE rendering engine (even in intranet) & Chrome Frame
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    //- Ensure proper rendering and zooming on touch devices
    meta(name="viewport", content="width=device-width, initial-scale=1")

    //- Search Engine Optimization
    meta(name="description", content=`${description  || 'Just a tiny little website of aspiring web developers'}`)
    meta(name="robots", content=`${robots} || index, follow`)

    //- Stylesheets
    link(rel='stylesheet', href='/dist/style.css')

    //- Google fonts
    link(href="https://fonts.googleapis.com/css?family=Roboto:300,400" rel="stylesheet")


  body.scrolled.margin-top
    nav.navbar.navbar-expand-lg.navbar-light.fixed-top#frontnav
      .container
        a.navbar-brand(href="/"): img#logo-image(src=`/images/node-friends-logo.png`)
        button.navbar-toggler(type="button" data-toggle="collapse" data-target="#frontnavlinks"  aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        
        .collapse.navbar-collapse#frontnavlinks
          ul.navbar-nav.ml-auto
            each item in helpers.navigationMain
              li.nav-item
                a.nav-link(href=`${item.href}`) #{item.name}

    block messages
      if locals.flashes
        .container
          .flash-messages
            - const categories = Object.keys(locals.flashes)
            each category in categories
              each message in flashes[category]
                .flash(class=`alert alert-${category}`)
                  != message
