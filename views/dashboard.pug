doctype html
html
    head
        meta(charset="utf-8")

        title= `${title || 'Home'} | My little website`

        // Always force latest IE rendering engine (even in intranet) & Chrome Frame
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

        // Ensure proper rendering and zooming on touch devices
        meta(name="viewport", content="width=device-width, initial-scale=1")

        // Search Engine Optimization
        meta(name="description", content=`${description  || 'Just a tiny little website'}`)
        meta(name="robots", content=`${robots} || index, follow`)

        // Stylesheets
        link(rel='stylesheet', href='/dist/style.css')

        //Google Fonts
        link(href='https://fonts.googleapis.com/css?family=Roboto:300,400' rel='stylesheet')

    body
      nav.navbar.navbar-expand-lg
        a.navbar-brand(href='a') Node Friends
        ul.navbar.navbar-nav.ml-auto
          li.nav-item Name Namerson
            img(src='https://d2gg9evh47fn9z.cloudfront.net/800px_COLOURBOX24426960.jpg') 

      .container-fluid
        .row
          .col-12.col-sm-5.col-md-3.col-lg-2#sidenav
            ul
              each item in helpers.sidenav
                a(href=`${item.href}`)
                  li.nav-item
                    i(class=`fa fa-${item.icon}` aria-hidden='true') 
                    | #{item.title}

          .col-12.col-sm-7.col-md-9.col-lg-10
